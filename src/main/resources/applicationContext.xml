<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.2.xsd">
    <context:property-placeholder location="classpath:conf.properties,system.properties" ignore-resource-not-found="true"  file-encoding="utf-8"/>
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" lazy-init="false">
        <property name="driverClass" value="${jdbc.driverClass}"></property>
        <property name="jdbcUrl" value="${jdbc.url}"></property>
        <property name="user" value="${jdbc.username}"></property>
        <property name="password" value="${jdbc.password}"></property>
        <!-- 连接池中最小连接数 -->
        <property name="minPoolSize" value="3"></property>
        <!-- 最大连接数 -->
        <property name="maxPoolSize" value="20"></property>
        <!-- 初始化时池中的连接数-->
        <property name="initialPoolSize" value="5"></property>
        <!-- 连接最大空闲时间，超出此时间连接将被释放-->
        <property name="maxIdleTime" value="60"></property>
        <!-- 当连接不够时，一次增加的连接数-->
        <property name="acquireIncrement" value="3"></property>
    </bean>
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"></property>
    </bean>
    <bean id="daoImpl" class="com.zzq.bj.dao.OrmDaoImpl" >
        <property name="jdbcTemplate" ref="jdbcTemplate"></property>
    </bean>


</beans>
